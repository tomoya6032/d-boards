.container
  %ul 
    - @reply.errors.full_messages.each do |message|
      %li= message 

    = form_with(model: @reply, url: chat_replys_path(@reply.chat), local:true) do |f|
      %div
        = f.label :content, '内容'
      %div 
        = f.text_area :content
      = f.submit '保存', class: 'btn-primary'