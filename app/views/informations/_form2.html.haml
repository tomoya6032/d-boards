.container
  %ul
    - @information.errors.full_messages.each do |message|
      %li= message
  = form_with(model: information, url: { controller: "informations", action: "update" }, local: true) do |f|
    %div 
      = f.label :eyecatch, 'アイキャッチ'
    %div 
      = f.file_field :eyecatch 
    %div
      = f.label :title, 'title'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    
    = f.submit '保存', class: 'btn-primary'